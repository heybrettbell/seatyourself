<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- <%= link_to 'Create Account', new_user_path %> -->
  <h1>Out to Lunch</h1>
  <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
  <% end %>
  <p class="userinfo">
     <% if current_user %>
       Signed in as <%= current_user.email %>. <%= link_to "Log out", sessions_path("current"), :method => :delete %>
     <% else %>
       <%= link_to "Log in", sessions_new_path %> or <%= link_to "Sign up", new_user_path %>
     <% end %>
   </p>
  <%= yield %>

 </body>
</html>
