<div class="container-fluid">
  <h2>Restaurants</h2>
  <% @restaurants.each_slice(3) do |row| %>
    <div class="row">
      <% row.each do |restaurant| %>
        <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="http://9bf9ac9a3eed53610ead-5ced3b8622611961454de23b8be691ab.r71.cf1.rackcdn.com/XLGallery/BnB-Restaurant.jpg" alt="...">
        <div class="caption">
          <h3><%= link_to restaurant.name, restaurant_path(restaurant.id) %></h3>
          <p><%= restaurant.description %></p>
          <p><%= link_to 'Learn More', restaurant_path(restaurant.id), class: "btn btn-primary" %> <%= link_to 'Reserve Now', restaurant_path(restaurant.id), class: "btn btn-default" %></p>
        </div>
      </div>
      </div>
        <% end %>
    </div>
  <% end %>
  </div>
